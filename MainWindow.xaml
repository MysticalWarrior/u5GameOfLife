<Window x:Class="u5GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u5GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="607.606" Width="525">
    <Canvas x:Name="Canvas">
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="txtInput" KeyDown="txtInput_KeyDown" Width="100" Height="25"/>
            <Button x:Name="btnShowInstructions" Content="Show Instructions" Click="btnShowInstructions_Click" Height="25"/>
            <Button x:Name="btnRunDay" Content="Next Day" Width="100" Click="btnRunDay_Click" Height="25"/>
        </StackPanel>
        <Canvas x:Name="Grid" Height="500" Width="500" Canvas.Top="30" Canvas.Left="7"/>
    </Canvas>
</Window>
